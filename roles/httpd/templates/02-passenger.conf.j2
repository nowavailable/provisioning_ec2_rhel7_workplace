LoadModule passenger_module /usr/local/rvm/rubies/ruby-{{ ruby_version_25 }}/lib/ruby/gems/2.4.0/gems/passenger-{{ passenger_version }}/buildout/apache2/mod_passenger.so
<IfModule mod_passenger.c>
    PassengerRoot /usr/local/rvm/rubies/ruby-{{ ruby_version_25 }}/lib/ruby/gems/2.4.0/gems/passenger-{{ passenger_version }}
    PassengerDefaultRuby /usr/local/rvm/wrappers/ruby-{{ ruby_version_25 }}@global/ruby
</IfModule>
Header always unset "X-Powered-By"
Header always unset "X-Rack-Cache"
Header always unset "X-Content-Digest"
Header always unset "X-Runtime"
PassengerDefaultUser apache
PassengerMaxPoolSize 10
PassengerMaxInstancesPerApp 4
PassengerFriendlyErrorPages off
